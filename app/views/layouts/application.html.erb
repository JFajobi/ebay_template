<!DOCTYPE html>
<html>
<head>
  <title>EbayTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <header>
      <div id="header-row" class="row">
        <div class="col-md-1 col-md-offset-1 header-buttons" id="logo">
          <%= link_to image_tag("logo.png"), "/" %>
        </div>
        <% if !current_user %>
          <div class="first-button col-md-2 col-md-offset-4 header-buttons action-buttons">
            <%= link_to "Create Ebay Listing", "/templates" %>
          </div>
          <div class="col-md-2 header-buttons action-buttons">
            <%= link_to "Create Account", new_user_registration_path %>
          </div>
          <div class="col-md-2 header-buttons action-buttons">
            <%= link_to "Sign In", new_user_session_path %>
          </div>
        <% else %>
          <div class="first-button col-md-2 col-md-offset-4 header-buttons action-buttons">
            <%= link_to "Create Ebay Listing", "/templates" %>
          </div>
          <div class="col-md-2 header-buttons action-buttons">
            <%= link_to "View Listings", "/listings" %>
          </div>
          <div class="col-md-2 header-buttons action-buttons">
            <%= link_to destroy_user_session_path, :method => :delete %>
          </div>
        <% end %>
      </div>
    </header>

    <div class="page-content">
      <%= yield %>  
    </div>
    
  </div>
</body>
</html>
